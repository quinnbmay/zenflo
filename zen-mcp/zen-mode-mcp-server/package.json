{
  "name": "@combinedmemory/zenflo-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for ZenFlo's Zen Mode task management, compatible with iOS Task Manager interface",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "zenflo-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "notifications:start": "pm2 start ecosystem.config.cjs",
    "notifications:stop": "pm2 stop zen-notifications",
    "notifications:restart": "pm2 restart zen-notifications",
    "notifications:logs": "pm2 logs zen-notifications",
    "notifications:status": "pm2 status zen-notifications",
    "notifications:delete": "pm2 delete zen-notifications"
  },
  "keywords": [
    "mcp",
    "task-manager",
    "zen-mode",
    "zenflo",
    "claude-code"
  ],
  "author": "Quinn May",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@types/express": "^5.0.5",
    "@types/ws": "^8.18.1",
    "axios": "^1.7.9",
    "expo-server-sdk": "^4.0.0",
    "express": "^5.1.0",
    "socket.io-client": "^4.8.1",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "ws": "^8.18.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
